<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Generic Data Import Tree -->
    <record id="import_generic_data_tree_view" model="ir.ui.view">
        <field name="name">import.generic.data.tree.view</field>
        <field name="model">import.generic.data</field>
        <field name="arch" type="xml">
            <tree string="Imported Data">
                <field name="date"/>
                <field name="file_name"/>
                <field name="ir_model_id"/>
                <field name="imported"/>
            </tree>
        </field>
    </record>

    <!-- Generic Data Import Form -->
    <record id="import_generic_data_form_view" model="ir.ui.view">
        <field name="name">import.generic.data.form.view</field>
        <field name="model">import.generic.data</field>
        <field name="arch" type="xml">
            <form string="Product">
                <header>
                    <button string="Import Data" type="object" name="import_data"/>
                </header>
                <sheet>
                    <field name='imported' invisible='1'/>
                    <field name='file_name' invisible='1'/>
                    <field name='file_type' invisible='1'/>
                    <group>
                        <group>
                            <field name='ir_model_id' required='1'/>
                            <field name='obj_identification_field' domain="[('model_id','=',ir_model_id)]" required='1'/>
                        </group>
                        <group>
                            <field name='file' required='1' filename="file_name"/>
                            <field name='import_type' required='1'/>
                            <field name='obj_identification_column'
                                   attrs="{'invisible': [('import_type', '=', 'create')], 'required': [('import_type', '=', 'update')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Data Lines Configuration" name="data_lines">
                            <field name="generic_data_line_ids" nolabel="1" context="{'default_ir_model_id':ir_model_id}">
                                <tree string="Lines" editable="bottom">
                                    <field name="ir_model_id" invisible="1"/>
                                    <field name="column_number" required='1'/>
                                    <field name="ir_model_fields_id" required='1' domain="[('model_id','=',ir_model_id)]"/>
                                    <field name="technical_search_value_field"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>


    <record id="action_import_generic_data" model="ir.actions.act_window">
        <field name="name">Import Data</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">import.generic.data</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Import Data Menu" id="import_data_menu" parent="base.menu_custom" sequence='-20'/>
    <menuitem name="Import Data" id="import_data_act" parent="import_data_menu" sequence='100' action="action_import_generic_data"/>

</odoo>