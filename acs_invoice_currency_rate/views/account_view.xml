<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_form_currency_rate" model="ir.ui.view">
        <field name="name">account.invoice.currency.rate.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='currency_id']/parent::div" position="after">
                    <field name="not_company_currency" invisible="1"/>
                    <field name="use_custom_rate" groups="base.group_multi_currency" attrs="{'invisible':[('not_company_currency','=',False)]}"/>
                    <field name="currency_rate" groups="base.group_multi_currency" attrs="{'invisible':['|',('not_company_currency','=',False), ('use_custom_rate','=',False)]}"/>
                    <field name="custom_rate" groups="base.group_multi_currency" attrs="{'invisible':['|',('not_company_currency','=',False), ('use_custom_rate','=',False)], 'readonly':['|', ('use_custom_rate','=',False), ('state','!=', 'draft')]}"/>
                </xpath>
                <xpath expr="//group/field[@name='amount_total']" position="after">
                    <field name="amount_total_company_currency" widget="monetary" options="{'currency_field': 'company_currency_id'}" attrs="{'invisible':[('not_company_currency','=',False)]}"/>
                </xpath>
            </data>
        </field>
    </record>

    <record id="supplier_invoice_form_currency_rate" model="ir.ui.view">
        <field name="name">account.invoice.supplier.currency.rate.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="not_company_currency" invisible="1"/>
                    <field name="use_custom_rate" groups="base.group_multi_currency" attrs="{'invisible':[('not_company_currency','=',False)]}"/>
                    <field name="currency_rate" groups="base.group_multi_currency" attrs="{'invisible':['|',('not_company_currency','=',False), ('use_custom_rate','=',False)]}"/>
                    <field name="custom_rate" groups="base.group_multi_currency" attrs="{'invisible':['|',('not_company_currency','=',False), ('use_custom_rate','=',False)], 'readonly':['|', ('use_custom_rate','=',False), ('state','!=', 'draft')]}"/>
                </xpath>
                <xpath expr="//group/field[@name='amount_total']" position="after">
                    <field name="amount_total_company_currency" widget="monetary" options="{'currency_field': 'company_currency_id'}" attrs="{'invisible':[('not_company_currency','=',False)]}"/>
                </xpath>
            </data>
        </field>
    </record>

</odoo>