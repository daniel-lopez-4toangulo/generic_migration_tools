<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="invoice_form_inherit_old_uuid" model="ir.ui.view">
        <field name="name">invoice.form.inherit.old.uuid</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//page[@name='other_info']" position="after">
                    <page name="old_uuid" string="UUID" attrs="{'invisible': ['|',('only_query', '=', False),('state','=','draft')]}">
                        <group>
                            <group>
                                <field name="uuid_aux" readonly="1"/>
                            </group>
                            <group>
                                <field name="sat_signed_date_aux" readonly="1"/>
                            </group>
                        </group>
                    </page>
                </xpath>

                <xpath expr="//header" position="inside">
                    <field name="only_query" invisible="1"/>
                </xpath>

                <xpath expr="//header" position="attributes">
                    <attribute name="attrs">{'invisible': [('only_query', '=', True),('state','!=','draft')]}</attribute>
                </xpath>
            </data>
        </field>
    </record>



    <record id="account_payment_form_inherit_old_uuid" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.old.uuid</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//sheet" position="inside">
                    <notebook>
                        <page name="old_uuid" string="UUID" attrs="{'invisible': ['|',('only_query', '=', False),('state','=','draft')]}">
                            <group>
                                <group>
                                    <field name="uuid_aux" readonly="1"/>
                                </group>
                                <group>
                                    <field name="sat_signed_date_aux" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </xpath>

                <xpath expr="//header" position="inside">
                    <field name="only_query" invisible="1"/>
                </xpath>

                <xpath expr="//header" position="attributes">
                    <attribute name="attrs">{'invisible': [('only_query', '=', True),('state','!=','draft')]}</attribute>
                </xpath>
            </data>
        </field>
    </record>

</odoo>